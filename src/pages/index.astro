---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { getTopImages } from "../microcms";

const res = await getTopImages()
---

<Layout title="Sample Web">
  <main>
    <h1 class="title">AMAM+</h1>

    <div>
      {
        res.topImages.map(x => (
          <Image class="top-image" src={x.url} alt="top image" width={x.width} height={x.height} />
        ))
      }
    </div>

    <ul>
      <li>
        <a href="/news">news</a>
      </li>
      <li>
        <a href="/about">about</a>
      </li>
      <li>
        <a href="/webstore">webstore</a>
      </li>
      <li>
        <a href="/contact">contact</a>
      </li>
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }
  .top-image {
    width: 100%;
    height: auto;
  }
</style>
