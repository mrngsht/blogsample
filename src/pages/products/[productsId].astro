---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { getProductIds, getProductDetail } from "../../microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const ids = await getProductIds();
  return ids.map(id => ({
    params: {
      productsId: id,
    },
  }));
}

//記事の詳細情報を取得
const { productsId } = Astro.params;
const products = await getProductDetail(productsId);
---

<Layout title={products.name}>
  <main>
    <h1 class="title">PRODUCTS</h1>
    <div class="products-thumbnail">
      <Image src={products.thumbnail.url} alt={products.name} width={products.thumbnail.width} height={products.thumbnail.height} />
    </div>
    <h2 class="products-name">{products.name}</h2>
    <div class="products-content" set:html={products.content} />
  </main>
</Layout>

<style>
  main {
  }

  .products-thumbnail {
    width: 100%;
    height: 350px;
    display: flex;
    justify-content: left;
    align-items: center;
  }

  .products-thumbnail img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
  }

  .products-name {
    font-size: 1.3rem; 
    font-weight: 500; 
    margin-top: 1.5rem;
    margin-bottom: 2rem;
  }

  .products-content {
    figure {
      margin-inline: auto;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  }

  @media screen and (min-width: 636px) {
    .products-thumbnail {
      height: 450px;
    }

    .products-name {
      margin-bottom: 3rem;
    }
  }
</style>
