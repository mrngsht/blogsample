---
import type { PaginateFunction } from "astro";
import Layout from "../../../layouts/Layout.astro";
import { getNewsPosts } from "../../../microcms";

export async function getStaticPaths({
  paginate,
}: {
  paginate: PaginateFunction;
}) {
  const res = await getNewsPosts();
  return paginate(res.contents, { pageSize: 1 });
}

const { page } = Astro.props;
---

<Layout title="news | Sample Web">
  <main>
    <h1 class="title">news</h1>
    <ul>
      {page.data.map(x => <li>{x.title}</li>)}
    </ul>
    <nav class="nav-page">
      <span class="page-link">
        {page.url.prev ? (
          <a href={page.url.prev}>&lt; Prev</a>
        ) : null}
      </span>
      <span class="page-number">
        <span>Page</span>
        <span>{page.currentPage} of {page.lastPage}</span>
      </span>
      <span class="page-link">
        {page.url.next ? (
          <a href={page.url.next}>Next &gt;</a>
        ) : null}
      </span>
      
    </nav>
  </main>
</Layout>

<style>
  .nav-page {
    display: flex;
    justify-content: center;
    align-items: center;;
    height: 2rem;
    margin: 4rem 0;
  }

  .nav-page > span {
    margin: auto 0.8rem;
    font-size: 0.8rem;
  }

  .nav-page > span:nth-child(1) { 
    width: 5rem;
    text-align: right;
  }
  .nav-page > span:nth-child(3) { 
    width: 5rem;
    text-align: left;
  }

