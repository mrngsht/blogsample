---
import Layout from "../../layouts/Layout.astro";
import { getNewsPostIds, getNewsPost } from "../../microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const ids = await getNewsPostIds();
  return ids.map(id => ({
    params: {
      newsId: id,
    },
  }));
}

//記事の詳細情報を取得
const { newsId } = Astro.params;
const news = await getNewsPost(newsId);
---

<Layout title="news | Sample Web">
  <main>
    <h1 class="title">{news.title}</h1>
    <p class="publishedAt">公開日時：{news.publishedAt}</p>
    <img src={news.thumbnail.url} alt={news.title} width="200" height="200" />
    <div class="content" set:html={news.content} />
  </main>
</Layout>

<style>
  main {
  }
  .content {
    figure {
      margin-inline: auto;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  }
</style>
