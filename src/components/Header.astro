---
const { invertColorOnPageScroll } = Astro.props;
---

<header>
  <nav>
    <div class="nav-links">
      <div>
        <a class="menu" href="/news">news</a>
      </div>
      <div>
        <a class="menu" href="/about">about</a>
      </div>
      <div>
        <a class="logo" href="/">AMAM+</a>
      </div>
      <div>
        <a class="menu" href="/webstore">webstore</a>
      </div>
      <div>
        <a class="menu" href="/contact">contact</a>
      </div>
    </div>
    <div class="nav-hamburger">
      <div class="hamburger">
        <div class="icon">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </div>
      <div>
        <a class="logo" href="/">AMAM+</a>
      </div>
      <div></div>
    </div>
    <div class="hamburger-list">
      <a class="menu" href="/news">news</a>
      <a class="menu" href="/about">about</a>
      <a class="menu" href="/webstore">webstore</a>
      <a class="menu" href="/contact">contact</a>
    </div>
  </nav>
</header>

<style>
  header {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    width: 100%;
    height: var(--header-height);
    background-color: var(--header-bg-color);
    z-index: 10;
  }

  header nav {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 15;
  }

  header a {
    color: var(--header-fg-color);
    letter-spacing: .15rem;
  }

  header a.logo {
    display: inline-block;
    margin: auto auto;
    text-decoration: none;
    font-size: 2.2rem;
    font-weight: 500;
  }

  .nav-links {
    display: none;
  }

  .nav-links a {
    display: block;
    text-align: center;
    text-decoration: none;
  }

  .nav-links > div {
    display: flex;           
    justify-content: center; 
    align-items: center;    
  }

  .nav-links a.menu {
    display: none;
  }

  .nav-links a.menu:hover,
  .nav-links a.menu:focus {
    text-decoration: underline;
    text-underline-offset: 5px;
    text-decoration-thickness: 1.5px;
  }

  .nav-hamburger {
    display: grid;
    grid-template-columns: 1fr 13rem 1fr;
    width: 100%;
    height: 100%;
    top: 5rem;
    left: 48px;
  }

  .nav-hamburger a {
    display: block;
    text-align: center;
    text-decoration: none;
  }

  .nav-hamburger > div {
    display: flex;           
    justify-content: center; 
    align-items: center;    
  }

  .hamburger {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    cursor: pointer;
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
  }

  .hamburger .icon {
    width: 60%;
    height: 80%;
    margin: auto auto;
  }

  .hamburger .line {
    display: block;
    width: 100%;
    height: 2px;
    margin: 12px 0;
    background-color: var(--header-fg-color);
  }

  .hamburger-list {
    display: none;
  }

  .hamburger-list.expanded {
    display: block;
    position: absolute; 
    top: var(--header-height);
    left: 0;
    z-index: 10;
    background-color: var(--hamburger-list-bg-color);
    width: 100%;
  }

  .hamburger-list a.menu {
    display: block;
    text-align: left;
    font-size: 1.5rem;
    font-weight: 300;
    text-decoration: none;
    padding: 1rem 1rem;
  }

  .hamburger-list a.menu:hover,
  .hamburger-list a.menu:focus {
    background-color: var(--hamburger-list-hover-bg-color);
  }

  body.color-inverted header {
    background-color: var(--header-bg-color-inverted);
  }
  body.color-inverted header a {
    color: var(--header-fg-color-inverted);
  }
  body.color-inverted .hamburger .line {
    background-color: var(--header-fg-color-inverted);
  }
  body.color-inverted .hamburger-list.expanded {
    background-color: var(--hamburger-list-bg-color-inverted);
  }
  body.color-inverted .hamburger-list a.menu:hover,
  .hamburger-list a.menu:focus {
    background-color: var(--hamburger-list-hover-bg-color-inverted);
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      display: grid;
      grid-template-columns: 1fr 1fr 13rem 1fr 1fr;
      width: 100%;
      height: 100%;
      top: 5rem;
      left: 48px;
    }

    .nav-links a.menu {
      font-size: 1.1rem;
      font-weight: 300;
      text-transform: uppercase;
    }

    .nav-hamburger {
      display: none;
    }

    .nav-links a.menu {
      display: block;
    }

    .hamburger, .hamburger-list.expanded { 
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("click", e => {
    let target = e.target as HTMLElement;
    if (target.closest(".hamburger")) {
      document.querySelector(".hamburger-list")?.classList.toggle("expanded");
      document.body.classList.toggle("no-scroll");
    } else if (!target.closest(".hamburger-list")) {
      document.querySelector(".hamburger-list")?.classList.remove("expanded");
      document.body.classList.remove("no-scroll");
    } 
  });
</script>


{ invertColorOnPageScroll && (
  <script>
  const toggleColorInverted = () => {
    if (document.documentElement.scrollTop < document.documentElement.clientHeight) {
      document.body.classList.add("color-inverted");
    } else {
      document.body.classList.remove("color-inverted");
    }
  }

  document.addEventListener('DOMContentLoaded', _ => {
    toggleColorInverted()
    window.addEventListener('scroll', toggleColorInverted)
    window.addEventListener('resize', toggleColorInverted)
  })
  </script>
)}
