---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string;
  invertHeaderColorOnPageScroll?: boolean;
}

const { title, invertHeaderColorOnPageScroll = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- google fonts: Shippori Mincho B1 -->
    <link href="https://fonts.googleapis.com/css2?family=Shippori+Mincho+B1&display=swap" rel="stylesheet">
    <!-- google fonts: Cormorant Garamond -->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Shippori+Mincho+B1&display=swap" rel="stylesheet">
    <!-- google fonts: Open Sans -->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Shippori+Mincho+B1&display=swap" rel="stylesheet">
    <!-- google fonts: Lato -->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Shippori+Mincho+B1&display=swap" rel="stylesheet">
    <!-- google fonts: Cabin -->
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Shippori+Mincho+B1&display=swap" rel="stylesheet">

    <title>{title}</title>
  </head>
  <body>
    <Header invertColorOnPageScroll={invertHeaderColorOnPageScroll} />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --header-height: 5rem;
    --main-fg-color: rgba(18, 18, 18, 0.75);
    --main-padding-horizontal: 1.2rem;
    --main-width: 90%;
    --main-max-width: var(--main-width);
  }
  html {
    font-family: "Cormorant Garamond", "Shippori Mincho B1", serif;
    font-weight: 300;
    font-style: normal;
    letter-spacing: .16rem;
    line-height: 1.5;
  }
  body {
    margin: 0;
  }
  body.no-scroll {
    overflow: hidden;
  }
  main * {
    color: var(--main-fg-color);
  }
  main {
    font-family: "Shippori Mincho B1", serif;
  }
  main:not(main.home) {
    /* padding: 0 var(--main-padding-horizontal); */
    width: var(--main-width);
    max-width: var(--main-max-width);
    margin: 0 auto;
  }
  main h1.title {
    font-family: "Cormorant Garamond", "Shippori Mincho B1", serif;
    text-transform: uppercase;
    margin-top: 2rem;
    margin-bottom: 3rem;
  }

  @media screen and (min-width: 636px) {
    :root {
      --main-padding-horizontal: 9rem;
      --main-width: 80%;
      --main-max-width: 1000px;
    }
  }

</style>
